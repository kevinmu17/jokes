{% if joke['type'] != 'http-error' %}
    {% if joke['type'] == 'twopart' %}
        <b>{{ joke['setup']|nl2br }}</b><br><br>
        {{ joke['delivery']|nl2br }}
    {% else %}
        {{ joke['joke']|nl2br }}
    {% endif %}
{% else %}
    <b>Here's a joke:</b><br>this widget is not working due to a HTTP error.
{% endif %}
